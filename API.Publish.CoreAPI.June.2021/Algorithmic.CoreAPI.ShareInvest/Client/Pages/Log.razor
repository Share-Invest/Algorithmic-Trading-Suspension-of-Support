@page "/index"
@inherits LogBase

@if (Logs is Catalog.Models.Log[])
{
	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Time</th>
				<th>Message</th>
				<th>Code</th>
				<th>Screen</th>
				<th>Name</th>
			</tr>
		</thead>
		<tbody>
			@if (Logs.Length > 0)
			{
				foreach (var log in Logs.OrderByDescending(o => o.Time))
				{
					<tr>
						@if (Temp.DayOfWeek.Equals(log.Time.DayOfWeek) is false || Temp.CompareTo(DateTime.UnixEpoch) == 0)
						{
							Temp = log.Time;

							<th>@log.Time.ToLongDateString()</th>
						}
						else
						{
							<td>@string.Empty</td>
						}
						<td>@log.Time.ToLongTimeString()</td>
						<td>@log.Message</td>
						<td>@log.Code</td>
						<td>@log.Screen</td>
						<td>@log.Name</td>
					</tr>
				}
			}
		</tbody>
	</table>
}
else
{
	<p><em>Loading...</em></p>
}